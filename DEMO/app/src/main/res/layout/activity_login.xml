<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".LoginActivity">


    <LinearLayout
        android:id="@+id/layout_top"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/whatseep_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <TextView
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:text="Login to Continue with\n whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_bottom"
        android:layout_below="@id/layout_top"
        android:layout_marginTop="115dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ud_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ud_background"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="15dp"
            android:hint="Enter the email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/ud_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/ud_background"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="15dp"
            android:hint="Enter the password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/ud_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:text="Forgot password?"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:text="Login"
            android:background="@drawable/ud_background"
            android:id="@+id/ud_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Don't have an account?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:text="Signup"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@color/teal_200"
            android:layout_marginLeft="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>